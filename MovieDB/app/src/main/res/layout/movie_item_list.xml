<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/poster_in_list"
        android:layout_width="80dp"
        android:layout_height="110dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating_in_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="5.0/10" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/yellowstar" />

            <TextView
                android:id="@+id/title_in_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="quyendsad"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
        </LinearLayout>


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/description_in_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsaaaaaaaaaaaaaaaaaaaagdsgsavsdav"
            android:textSize="15dp"
            />
    </LinearLayout>
</LinearLayout>